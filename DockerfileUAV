FROM osrf/ros:humble-desktop
# FROM ros:humble-perception

ENV DEBIAN_FRONTEND=noninteractive
ARG DEVELOPMENT=false

# Install linux packages
RUN apt-get update && apt-get upgrade -y && apt-get install -y locales xvfb python3 python3-pip python3-rosdep python3-colcon-common-extensions python3-colcon-core

# RUN apt-get clean && rm -rf /var/lib/apt/lists/*
RUN python3 -m pip install -U python-dotenv pyquaternion
RUN echo "source /opt/ros/humble/setup.bash" >> /root/.bashrc && \
    echo "alias start='colcon build --symlink-install --packages-select uav_agent && source install/setup.bash && ros2 run uav_agent uav_agent'" >> /root/.bashrc

COPY . /app/
WORKDIR /app/

# Modify the RUN command to use ARG
RUN /bin/bash -c 'if [ "$DEVELOPMENT" = "true" ]; then \
    python3 -m pip install --user -e .; \
    else \
    python3 -m pip install -U jpl-rosa==1.0.7; \
    fi'

CMD ["/bin/bash", "-c", "source /opt/ros/humble/setup.bash && \
    echo \"Run \\`start\\` to build and launch the ROSA-UAV demo.\" && \
    /bin/bash"]
